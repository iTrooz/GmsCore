<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <PreferenceCategory
        android:title="Basic data">
        <Preference
            android:key="pref_request_type"
            android:title="Request type"
            tools:summary="ATTESTATION" />

        <Preference
            android:key="pref_time"
            android:title="Time of request"
            tools:summary="1970/01/01 1:00 AM" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Request data">

    <Preference
        android:key="pref_nonce"
        android:title="Nonce (Hex)"
        tools:summary="68b329da9893e34099c7d8ad5c" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Response data">
        <Preference
            android:key="pref_status"
            android:title="Response status"
            tools:summary="CTS failed" />

        <Preference
            android:key="pref_eval_type"
            android:title="Evaluation type"
            tools:summary="HARDWARE_BACKED" />

        <Preference
            android:key="pref_advice"
            android:title="Advice"
            tools:summary="RESTORE_TO_FACTORY_ROM" />

        <Preference
            android:key="pref_copy_result"
            android:title="Copy JSON JWS data"
            app:icon="?attr/actionModeCopyDrawable" />
    </PreferenceCategory>

</PreferenceScreen>